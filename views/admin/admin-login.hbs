<section class="container-fluid">
  <div class="row d-flex justify-content-center">
    <div
      class="col-lg-6 d-flex justify-content-center border border-success mb-5 shadow-lg p-3 mb-5 bg-white rounded"
    >

      <div
        class="col-lg-8 d-flex justify-content-center mt-5 mb-5 pb-5"
        style="background-color: rgb(215, 223, 215); opacity: .7; border-radius: 20px;"
      >
        <form action="/admin/login" method="post" class="mt-3">
          <img
            src="/images/admin-log.svg"
            alt=""
            width="100"
            height="100"
            style="margin-left: 60px;"
          />
          <span class="label label-success mt-3">
            <h3>Admin Login Form..</h3>
          </span>
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Admin</label>
            <input
              type="text"
              class="form-control shadow bg-white rounded"
              id="inputAdmin"
              aria-describedby="emailHelp"
              name="admin_field"
              required
              onkeyup="validName()"
            />
            <span id="email-error" class="text-danger text-center"></span>

          </div>
          <div class="mb-3">
            <label
              for="exampleInputPassword1"
              class="form-label"
            >Password</label>
            <input
              type="password"
              class="form-control shadow bg-white rounded"
              id="inputAdminPassword"
              name="admin_password"
              required
              onkeyup="validPsd()"
            />
            <span id="psd-error" class="text-danger text-center"></span>
          </div>
          <button type="reset" class="btn btn-primary">Reset</button>
          <button
            type="submit"
            class="btn btn-primary"
            onclick="return formValid()"
          >Submit</button>

          {{#if logerr}}
            <div class="alert alert-success text-center mt-3">
              Invalid Username or Password
            </div>
          {{/if}}
        </form>
      </div>

    </div>

  </div>
</section>
<script src="/javascripts/adminLoginValidation.js"></script>