        <input type="text" name="orderpro" id="orderpro" hidden value="{{dashData.orderUnderProcessing}}">
        <input type="text" name="orderout" id="orderout" hidden value="{{dashData.oderOutDelivery}}">
        <input type="text" name="ordrdel" id="ordrdel" hidden value="{{dashData.deletedOrder}}">
        <input type="text" name="paypal" id="paypal" hidden value="{{dashData.paypal}}">
        <input type="text" name="cod" id="cod" hidden value="{{dashData.cod}}">
        <input type="text" name="razor" id="razor" hidden value="{{dashData.razor}}">
    
        <div class="row d-flex justify-content-around p-3">
            <div class="col-5 mt-2 me-3 shadow-lg p-3 mb-5 bg-white rounded" style="width: 300; height: 300; border-radius: 5px; background-color: rgb(179, 197, 218);">
                <canvas id="myChart" width="400" height="400"></canvas>
            </div>
            <div class="col-5 mt-2 shadow-lg p-3 mb-5 bg-white rounded" style="width: 300; height: 300; border-radius: 5px; background-color: rgb(179, 197, 218);">
                <canvas id="donChart" width="400" height="400"></canvas>
            </div>
        </div>
        <div class="row d-flex justify-content-around">
            <div class="col-11 shadow-lg p-3 mb-5 bg-white rounded" style=" height: auto; background-color: rgb(179, 197, 218); ">
                <canvas id="lineChart" width="400" height="400"></canvas>
            </div>
        </div>
    </div>
</section>
