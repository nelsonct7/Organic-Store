<script>
function deletbann(banId){  
  $.ajax({
    url:'/admin/delete-banner/'+banId,
    method:'get',
    success:(response)=>{
      if(response.status){
          Swal.fire({
          title: 'Deleted',
          text: "Banner Delete Success fully",
          icon: 'info',
          showCancelButton: false,
          confirmButtonColor: '#11B619',
          cancelButtonColor: '#A19391',
          confirmButtonText: 'Ok'
          }).then((result) => {
               if (result.isConfirmed) {
                                      location.href='/admin/banner'
                                      }
          })

      }

    }
  })  

      
  }
</script>