
    <section class="d-flex justify-content-around ms-5" >
 
    <div class=" p-3 mt-4 shadow-lg p-4 mb-5 bg-body rounded border border-dark">
        <div class="d-flex align-items-end mb-3" >
           <h3 class="me-3">View Orders</h3>
            
        </div>

   <table class="table mt-3" id="prtable" > 
  <thead>
    <tr>
      
      
      <th scope="col">Date</th>
      <th scope="col">Address</th>
      <th scope="col">Mobile</th>
      <th scope="col">Products</th>
      <th scope="col">Payment</th>
      <th scope="col">Status</th>
      <th scope="col">Deleted</th>
      <th scope="col">Dispatched</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each orders}}
    <tr>
      
     
      <td>{{this.stringDate}}</td>
      <td>                          
                                    {{this.address.address_collection.first_name}}<br>{{this.address.address_collection.house_name}}<br>{{this.address.address_collection.street}}
                                    {{this.address.address_collection.town}}{{this.address.address_collection.pin}}<br>{{this.address.address_collection.state}}
                                    {{this.address.address_collection.country}}
                                   

      </td>
    
      <td>{{this.user_info.user_mobile}}</td>
      <td>
          {{#each this.products}}
          {{this.product_id}}
          {{/each}}
      </td>
      <td>{{this.payment_option}}</td>
      <td>{{this.status}}</td>

      <td>{{this.deleted}}</td>
      <td>{{#if this.dispatched}}
        Order Out for Delivery
        {{else}}
        {{#if this.deleted}}
        Order Deleted
        {{else}}
        Order under Processing
        {{/if}}
        {{/if}}
      </td>
      {{#if this.deleted}}
        <td>
        <button class="btn btn-primary" disabled>Edit</button>
        <button class="btn btn-danger" disabled>Delete</button>
      </td>
      {{else}}
      {{#if this.dispatched}}
      <td>
        <button class="btn btn-primary" disabled>Edit</button>
        <button class="btn btn-danger" disabled>Delete</button>
      </td>
      {{else}}
      <td>
        <a href="/admin/edit-order/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-order/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure to delete this {{this._id}}')">Delete</a>
      </td>
      {{/if}}
      {{/if}}
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>



